<div class="container">

    <form method="post" action="/user/category/update">

        <label for="name">Nome da Categoria: </label>
        <input type="text" name="name" value="{{data.category}}">
        <input type="hidden" name="id" value="{{data.id}}">

        <button class="main-btn btn-3" type="submit">Enviar</button>
    </form>

    {{#each data.errors}}
        <div class="error-msg">{{text}}: Por favor preencha todos os campos</div>
    {{/each}}

</div>
